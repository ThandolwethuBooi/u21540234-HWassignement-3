@model IPagedList<u21540234_HWassignement_3.Models.type>
@using PagedList
@using PagedList.Mvc

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			Book Type
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.name)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.typeId }) |
				@Html.ActionLink("Details", "Details", new { id = item.typeId }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.typeId })
			</td>
		</tr>
	}

</table>
@Html.PagedListPager(Model,
	page => Url.Action("Index",
	new { page }),
	new PagedListRenderOptions
	{
		UlElementClasses = new[] { "pagination" },
		LiElementClasses = new[] { "page-item", "mx-4" },

	}

	)


