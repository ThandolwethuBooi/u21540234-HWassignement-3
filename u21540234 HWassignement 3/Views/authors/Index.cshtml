@model IPagedList<u21540234_HWassignement_3.Models.author>
@using PagedList;
@using PagedList.Mvc;
@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			Name
		</th>
		<th>
			Surname
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.surname)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.authorId }) |
				@Html.ActionLink("Details", "Details", new { id = item.authorId }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.authorId })
			</td>
		</tr>
	}

</table>
@Html.PagedListPager(Model,
	page => Url.Action("Index",
	new { page }),
	new PagedListRenderOptions
	{
		UlElementClasses = new[] { "pagination" },
		LiElementClasses = new[] { "page-item", "mx-4" },

	}

	)

